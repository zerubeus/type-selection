{
  "manifest_version": 3,
  "name": "Type to Read",
  "version": "1.0",
  "description": "Interactive reading by typing selected text",
  "permissions": ["activeTab", "contextMenus"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Toggle Type Selection Mode"
    }
  }
}
